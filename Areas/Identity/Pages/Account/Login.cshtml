@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <form id="account" method="post" class="mt-4">
            <h2>Используйте существующий аккаунт для входа.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Почта</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">Запомнить меня</label>
            </div>
            <button id="login-submit" type="submit" class="mt-3 btn btn-primary btn-block">Войти</button>
            <div class="mt-3">
                <p class="mb-0">Нет аккаунта?</p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Создать нового пользователя</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}