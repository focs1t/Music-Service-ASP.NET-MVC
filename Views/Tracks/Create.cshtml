@model CourseWork.Models.Tracks

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавление</h1>

<h4>Треки</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="file" class="control-label"></label>
                <input asp-for="file" class="form-control" value="gdfgdf"/>
                <span asp-validation-for="file" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="genresId" class="control-label">Жанр</label>
                <select asp-for="genresId" class ="form-control" asp-items="ViewBag.genresId"></select>
            </div>
            <div class="form-group">
                <label asp-for="albumsId" class="control-label">Альбом</label>
                <select asp-for="albumsId" class ="form-control" asp-items="ViewBag.albumsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="artistsId" class="control-label">Исполнитель</label>
                <select asp-for="artistsId" class ="form-control" asp-items="ViewBag.artistsId"></select>
            </div>
            <div class="form-group">
                <div class="mt-3">
                    <input type="file" name="upload" class="form-control" /><br>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
