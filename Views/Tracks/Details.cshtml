@model CourseWork.Models.Tracks

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Трек номер @Model?.id</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Название</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.name)</dd>
                <dt class="col-sm-2">Дата публикации</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.date)</dd>
                <dt class="col-sm-2">Путь файла</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.file)</dd>
                <dt class="col-sm-2">Жанр</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.genres.name)</dd>
                <dt class="col-sm-2">Альбом</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.albums.name)</dd>
                <dt class="col-sm-2">Исполнитель</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.artists.name)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-3">
    <a class="btn btn-primary" asp-action="Index">Вернуться к списку</a>
</div>