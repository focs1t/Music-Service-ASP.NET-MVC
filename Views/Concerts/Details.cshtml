@model CourseWork.Models.Concerts

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Концерт номер @Model?.id</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Название места</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.name)</dd>
                <dt class="col-sm-2">Город</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.city)</dd>
                <dt class="col-sm-2">Дата проведения</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.date)</dd>
                <dt class="col-sm-2">Тур</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.tours.name)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-3">
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Изменить</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
</div>