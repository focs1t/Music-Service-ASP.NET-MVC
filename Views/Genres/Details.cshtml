@model CourseWork.Models.Genres

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Жанр номер @Model?.id</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Название жанра</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.name)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-3">
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Изменить</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
</div>
