    @model Playlists

    <h1>Подробности</h1>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Плейлист номер @Model?.id</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Название плейлиста</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.name)</dd>
                    <dt class="col-sm-2">Описание</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.description)</dd>
                    <dt class="col-sm-2">Дата публикации</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.date)</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <a asp-action="EditUserPlaylist" asp-route-id="@Model?.id" class="btn btn-primary">Изменить</a>
        <a asp-action="UserPlaylists" class="btn btn-secondary">Вернуться к списку</a>
    </div>

    <hr />

    <div>
        <h4>Треки</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Исполнитель</th>
                    @* <th>Действия</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var track in ViewBag.Tracks)
                {
                    <tr>
                        <td>@track.tracks.name</td>
                        <td>@track.tracks.artists.name</td>
                        @* <td>
                            @* <form asp-action="Delete" asp-route-trackId="@track.tracks.id">
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form> 
                            <a href="/TracksPlaylists/Delete/@track.tracks.id" class="btn btn-danger">Удалить</a>
                        </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>