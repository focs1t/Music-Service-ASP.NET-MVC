@model List<CourseWork.Models.Playlists>

@{
    ViewData["Title"] = "Ваши плейлисты";
}

<h1>Ваши плейлисты</h1>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Добавить</a>
</p>
@*<p>
    @Html.ActionLink("Create", "CreateForCurrentUser")
</p>*@

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Название</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var playlist in Model)
            {
                <tr>
                    <td>@playlist.name</td>
                    <td>
                        @* <a href="@Url.Action("DownloadPlaylistTracks", "Playlists", new { id = playlist.id })" class="btn btn-primary">Скачать все треки плейлиста</a> *@
                        <a class="btn btn-primary" href="@Url.Action("EditUserPlaylist", new { id = playlist.id })">Изменить</a>
                        <a class="btn btn-secondary" href="@Url.Action("DetailsUserPlaylist", new { id = playlist.id })">Подробности</a>
                        <a class="btn btn-danger" href="@Url.Action("DeleteUserPlaylist", new { id = playlist.id })">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>