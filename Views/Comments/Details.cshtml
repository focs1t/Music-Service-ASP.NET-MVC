@model CourseWork.Models.Comments

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Комментарий номер @Model?.id</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Пользователь</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.username)</dd>
                <dt class="col-sm-2">Содержание</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.description)</dd>
                <dt class="col-sm-2">Дата публикации</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.date)</dd>
                <dt class="col-sm-2">Альбом</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.albums.name)</dd>
            </dl>
        </div>
    </div>
</div>

