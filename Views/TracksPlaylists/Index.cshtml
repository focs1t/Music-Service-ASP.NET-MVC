@model IEnumerable<CourseWork.Models.TracksPlaylists>

@{
    ViewData["Title"] = "Выберите плейлист";
}

<h1>Плейлисты и треки пользователей</h1>

@* <p>
    <a asp-action="Create" class="btn btn-success">Добавить</a>
</p> *@
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Треки</th>
                <th>Плейлисты</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @string.Format("{0} - {1}", item.tracks.name, item.tracks.artists.name)
                    </td>
                    <td>
                        @string.Format("{0} - {1}", item.playlists.name, item.playlists.username)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Подробнее</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
