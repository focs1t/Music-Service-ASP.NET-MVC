@model CourseWork.Models.TracksPlaylists

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Плейлисты и треки номер @Model?.Id</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            Трек
                        </dt>
                        <dd class="col-sm-8">
                            @Model.tracks.name
                        </dd>
                        <dt class="col-sm-4">
                            Исполнитель
                        </dt>
                        <dd class="col-sm-8">
                            @Model.tracks.artists.name
                        </dd>
                        <dt class="col-sm-4">
                            Плейлист
                        </dt>
                        <dd class="col-sm-8">
                            @Model.playlists.name
                        </dd>
                        <dt class="col-sm-4">
                            Автор
                        </dt>
                        <dd class="col-sm-8">
                            @Model.playlists.username
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a>
            <a class="btn btn-secondary" asp-action="Index">Вернуться к списку</a>
        </div>
    </div>
</div>
