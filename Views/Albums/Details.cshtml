@model CourseWork.Models.Albums

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Альбомы</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Название альбома</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.name)</dd>
                @if (!string.IsNullOrEmpty(Model.description))
                {
                    <dt class="col-sm-2">Описание</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.description)</dd>
                }
                <dt class="col-sm-2">Дата публикации</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.date)</dd>
                <dt class="col-sm-2">Путь фото</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Photo)</dd>
                <dt class="col-sm-2">Жанр</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.genres.name)</dd>
                <dt class="col-sm-2">Исполнитель</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.artists.name)</dd>
                <dt class="col-sm-2">Обложка альбома</dt>
            </dl>
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img class="mt-4 mb-4" width="200" src="@Model.Photo">
            }
        </div>
    </div>
</div>

<div class="container mt-3">
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Изменить</a>
        <form asp-action="GetReport" asp-route-id="@Model?.id">
            <button type="submit" class="btn btn-success">Создать отчет</button>
        </form>
    }
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
</div>

<hr />

<div>
    <h4>Треки</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Исполнитель</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var track in ViewBag.Tracks)
            {
                <tr>
                    <td>@track.name</td>
                    <td>@track.artists.name</td>
                </tr>
            }
        </tbody>
    </table>
</div>